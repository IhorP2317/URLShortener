@model URLShortener.Domain.Models.AboutMessage
<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title">Edit About Message</h2>
                </div>
                <form asp-action="Edit" asp-controller="About" method="post">
                    <div class="card-body form-group">
                        <textarea class="form-control" asp-for="Message" rows="15"></textarea>
                    </div>
                    <div class="card-footer text-right">
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-outline-dark" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
