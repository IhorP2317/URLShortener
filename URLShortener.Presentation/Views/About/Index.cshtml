@model URLShortener.Domain.Models.AboutMessage

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title">About URL Shortener</h2>
                </div>
                <div class="card-body">
                    <textarea class="form-control" rows="15" readonly>@Model.Message</textarea>
                </div>
                <div class="card-footer text-right">
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-controller="About" class="btn btn-primary">Edit</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>